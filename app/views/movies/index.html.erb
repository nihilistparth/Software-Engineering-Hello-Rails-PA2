<h1>All Movies</h1>

<table>
  <thead>
    <tr>
      <th class="<%= sort_class('title') %>">
        <%= sortable "title", "Title" %> <%= sort_indicator('title') %>
      </th>
      <th class="<%= sort_class('rating') %>">
        <%= sortable "rating", "Rating" %> <%= sort_indicator('rating') %>
      </th>
      <th class="<%= sort_class('release_date') %>">
        <%= sortable "release_date", "Release Date" %> <%= sort_indicator('release_date') %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3">Total Movies: <%= @movies.count %></td>
    </tr>
  </tfoot>
</table>

<%= link_to 'Add New Movie', new_movie_path %>
